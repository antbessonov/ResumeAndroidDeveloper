<resources>

    <style name="Theme.AndroidDeveloper" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:fontFamily">@font/noto_serif</item>

        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="android:statusBarColor">@color/white</item>

    </style>

    <style name="Theme.AndroidDeveloper.BorderNavigation" parent="">
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="Theme.AndroidDeveloper.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/bottom_nav_colors</item>
        <item name="itemRippleColor">@color/gray</item>
        <item name="itemTextColor">@drawable/bottom_nav_colors</item>
    </style>

    <style name="Theme.AndroidDeveloper.BackgroundView" parent="">
        <item name="android:background">@color/md_theme_light_surfaceVariantMid</item>
    </style>

    <style name="Theme.AndroidDeveloper.BorderView" parent="">
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="Theme.AndroidDeveloper.GreetingText" parent="">
        <item name="android:background">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.AndroidDeveloper.PhotoRecommenderRounded" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.AndroidDeveloper.RecommendationTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabBackground">@drawable/tab_view_pager_selector</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="Theme.AndroidDeveloper.CardView" parent="CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Theme.AndroidDeveloper.HardSkillCardView" parent="Theme.AndroidDeveloper.CardView">
        <item name="cardBackgroundColor">@color/md_theme_light_surfaceVariantMid</item>
    </style>

    <style name="Theme.AndroidDeveloper.RecommendationCardView" parent="Theme.AndroidDeveloper.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.AndroidDeveloper.EducationCardView" parent="Theme.AndroidDeveloper.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.AndroidDeveloper.ContactCardView" parent="Theme.AndroidDeveloper.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.AndroidDeveloper.RecyclerView" parent="">
        <item name="android:background">@color/md_theme_light_surfaceVariantMid</item>
    </style>

    <style name="Theme.AndroidDeveloper.GithubProjectMaterialCardView" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.AndroidDeveloper.GithubProjectHardSkill" parent="">
        <item name="android:background">@drawable/education_group_name_background</item>
    </style>

    <style name="Theme.AndroidDeveloper.EducationGroup" parent="">
        <item name="android:background">@drawable/education_group_name_background</item>
    </style>

    <style name="Theme.AndroidDeveloper.DefaultMap" parent="">
        <item name="android:background">@drawable/default_map</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="Theme.AndroidDeveloper.MainContact" parent="">
        <item name="android:background">@drawable/main_contact_background</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.AndroidDeveloper.LinkText" parent="">
        <item name="android:textColor">@color/color_link</item>
    </style>

</resources>